<h3>Hallo {{getName}}!</h3>

{{^domainsEmpty}}
	<div class='table-responsive'>
		<table class='table table-striped'>
			<tr>
				<th style='text-align: center;'><a href='?order=id'>ID</a></th>
				<th><a href='?order=domain'>Domain</a></th>
				<th>Verzeichnis</th>
				<th style='text-align: center;' width='130'>Optionen</th>
			</tr>

			{{#domains}}
				<tr>
					<td style='text-align: center; vertical-align: middle;' valign='middle'>{{id}}</td>
					<td style='vertical-align: middle;' valign='middle'>{{domain}} (www.{{domain}})
						<br>
						<span style='font-size:9px;'>{{path1}}: {{{path1Status}}}</span>
						<br>
						<span style='font-size:9px;'>{{path2}}: {{{path2Status}}}</span>
					</td>
					<td style='vertical-align: middle;' valign='middle'>
						{{realPath}}{{{realPathStatus}}}
					</td>
					<td style='text-align: center; vertical-align: middle'>
						<div class='btn-group'>
							<a href='?p=edit-domain&id={{id}}' class='btn btn-info btn-sm'><i class='fa fa-pencil fa-lg  fa-fw'></i></a>
							<a href='?p=del-domain-func&id={{id}}' class='btn btn-danger btn-sm'><i class='fa fa-trash fa-lg  fa-fw'></i></a>
						</div>
					</td>
				</tr>
			{{/domains}}
		</table>
	</div>

{{/domainsEmpty}}

{{#domainsEmpty}}
	<p>Keine Domains vorhanden. Beginne mit dem <a href='?p=add-domain'>Hinzuf√ºgen</a> einer Domain!</p>
{{/domainsEmpty}}
